{
  "name": "servekaro",
  "version": "0.0.1",
  "description": "Configurable static web server",
  "keywords": [
    "server",
    "static",
    "web"
  ],
  "author": "Anshul Kharbanda",
  "license": "MIT",
  "engines": {
    "node": "^8.11.0"
  },
  "scripts": {
    "build-lib": "./node_modules/.bin/babel src/lib -d lib",
    "build-bin": "./node_modules/.bin/babel src/bin/servekaro.js -o bin/servekaro",
    "build": "npm run build-lib && npm run build-bin",
    "prepublish": "npm run build",
    "test": "./node_modules/.bin/mocha test --require @babel/register --reporter spec --colors"
  },
  "bin": {
    "servekaro": "bin/servekaro"
  },
  "files": [
    "lib",
    "bin",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/register": "^7.0.0-beta.46",
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "mocha": "^5.1.1"
  }
}
